<UserControl x:Class="RLCServerApplication.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RLCServerApplication.Views"
             xmlns:vm="clr-namespace:RLCServerApplication.ViewModels"
             xmlns:converters="clr-namespace:RLCServerApplication.Converters"
             xmlns:model="clr-namespace:RLCCore;assembly=Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:SettingsViewModel}"
             IsEnabled="{Binding CanEdit}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
        <converters:UIntToStringConverter x:Key="StringToIntConverter"/>
        <DataTemplate x:Key="SettingsTemplate" DataType="{x:Type model:RLCProjectController}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="6,4,0,0" Orientation="Horizontal" VerticalAlignment="Top" Height="auto">
                    <TextBlock Text="IP адресс:" FontSize="18" Margin="0, 0, 5, 0"/>
                    <ComboBox ItemsSource="{Binding NetworkController.AddressSettings}" 
                              SelectedItem="{Binding NetworkController.CurrentAddressSetting}"
                              IsEnabled ="{Binding NetworkController.Editable}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="6,4,0,0" Orientation="Horizontal" VerticalAlignment="Top" Height="auto">
                    <TextBlock Text="Ключ проекта:" FontSize="18" Margin="0, 0, 5, 0"/>
                    <TextBox Text ="{Binding CurrentProject.Key, Converter={StaticResource StringToIntConverter}}"/>
                </StackPanel>
                
            </Grid>            
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ContentPresenter Content="{Binding RLCProjectController}" ContentTemplate="{StaticResource SettingsTemplate}"/>

    </Grid>
</UserControl>
